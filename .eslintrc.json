{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"next/core-web-vitals",
		"standard",
		"plugin:react/recommended",
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},

	"plugins": ["react", "prettier"],
	"rules": {
		"prettier/prettier": "error",
		"react/react-in-jsx-scope": "off"
	}
}
